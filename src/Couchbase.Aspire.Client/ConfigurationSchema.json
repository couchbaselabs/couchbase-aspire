{
    "definitions": {
        "logLevel": {
            "properties": {
                "Couchbase": {
                    "$ref": "#/definitions/logLevelThreshold"
                }
            }
        }
    },
    "type": "object",
    "properties": {
        "Aspire": {
            "type": "object",
            "properties": {
                "Couchbase": {
                    "type": "object",
                    "properties": {
                        "Client": {
                            "type": "object",
                            "properties": {
                                "ClusterOptions": {
                                    "type": "object",
                                    "description": "Provides additional cluster options for connecting to a Couchbase cluster.",
                                    "additionalProperties": true
                                },
                                "ConnectionString": {
                                    "type": "string",
                                    "description": "Gets or sets the connection string of the Couchbase server to connect to."
                                },
                                "Username": {
                                    "type": "string",
                                    "description": "Gets or sets the username for authenticating with the Couchbase server."
                                },
                                "Password": {
                                    "type": "string",
                                    "description": "Gets or sets the password for authenticating with the Couchbase server."
                                },
                                "BucketName": {
                                    "type": "string",
                                    "description": "Gets or sets the bucket name to connect to."
                                },
                                "HealthChecks": {
                                    "type": "object",
                                    "description": "Gets or sets settings related to health checks.",
                                    "properties": {
                                        "Type": {
                                            "type": "string",
                                            "description": "Gets or sets the type of health check to perform.",
                                            "enum": [ "Active", "Passive" ],
                                            "default": "Active"
                                        },
                                        "MinimumHealthyNodes": {
                                            "type": "object",
                                            "description": "Gets or sets the minimum number of healthy nodes required for each service.",
                                            "properties": {
                                                "KeyValue": {
                                                    "type": "integer",
                                                    "minimum": 0,
                                                    "description": "The threshold for the key/value service."
                                                },
                                                "Query": {
                                                    "type": "integer",
                                                    "description": "The threshold for the query service."
                                                },
                                                "Search": {
                                                    "type": "integer",
                                                    "description": "The threshold for the full-text search service."
                                                },
                                                "Analytics": {
                                                    "type": "integer",
                                                    "description": "The threshold for the analytics service."
                                                }
                                            }
                                        },
                                        "MaximumUnhealthyNodes": {
                                            "type": "object",
                                            "description": "Gets or sets the maximum number of unhealthy nodes allowed for each service.",
                                            "properties": {
                                                "KeyValue": {
                                                    "type": "integer",
                                                    "minimum": 0,
                                                    "description": "The threshold for the key/value service."
                                                },
                                                "Query": {
                                                    "type": "integer",
                                                    "minimum": 0,
                                                    "description": "The threshold for the query service."
                                                },
                                                "Search": {
                                                    "type": "integer",
                                                    "minimum": 0,
                                                    "description": "The threshold for the full-text search service."
                                                },
                                                "Analytics": {
                                                    "type": "integer",
                                                    "minimum": 0,
                                                    "description": "The threshold for the analytics service."
                                                }
                                            }
                                        }
                                    }
                                },
                                "DisableHealthChecks": {
                                    "type": "boolean",
                                    "description": "Gets or sets a boolean value that indicates whether the Couchbase health check is disabled or not.",
                                    "default": false
                                },
                                "DisableMetrics": {
                                    "type": "boolean",
                                    "description": "Gets or sets a boolean value that indicates whether the OpenTelemetry metrics are disabled or not.",
                                    "default": false
                                },
                                "DisableTracing": {
                                    "type": "boolean",
                                    "description": "Gets or sets a boolean value that indicates whether the OpenTelemetry tracing is disabled or not.",
                                    "default": false
                                }
                            },
                            "description": "Provides the client configuration settings for connecting to a Couchbase cluster."
                        }
                    }
                }
            }
        }
    }
}
